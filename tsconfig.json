{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"verbatimModuleSyntax": false,
		"skipLibCheck": true,

		"moduleResolution": "Node",
		"lib": ["DOM"],

		"baseUrl": ".",
		"outDir": "dist",
		"paths": {"config": ["config.ts"]}
	},
	"include": ["src/**/*", "lib/**/*", "tests/**/*"],
	"exclude": [
		"node_modules",
		"./node_modules",
		"./node_modules/*",
		"./node_modules/@types/node/index.d.ts"
	]
}
