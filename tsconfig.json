{
    "extends": "@sapphire/ts-config",
    "compilerOptions": {
		"noUnusedLocals": false,
		"noUnusedParameters": false,
        "verbatimModuleSyntax": false,
		"skipLibCheck": true,
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,

        "lib": ["DOM"],

        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "@surph/src/*": ["src/*"],
            "@surph/src": ["src/index.ts"],

            "@surph/lib/api": ["lib/api/index.ts"],
            "@surph/lib/util": ["lib/util/index.ts"],
            "@surph/lib/media": ["lib/media/index.ts"],
            "@surph/lib/message": ["lib/message/index.ts"],

            "@surph/config": ["config.ts"]
        }
    },
    "include": ["src/**/*", "lib/**/*", "tests/**/*"],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts"
    ]
}